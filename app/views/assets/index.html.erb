<h1>Listing assets</h1>

<table>
  <thead>
    <tr>
      <th>Asset tag</th>
      <th>Type</th>
      <th>Manufactuer</th>
      <th>Model</th>
      <th>Location region</th>
      <th>Location site</th>
      <th>Assignee</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.asset_tag %></td>
        <td><%= asset.typeofasset %></td>
        <td><%= asset.manufactuer %></td>
        <td><%= asset.model %></td>
        <td><%= asset.location_region %></td>
        <td><%= asset.location_site %></td>
        <td><%= asset.assignee %></td>
        <td><%= asset.active %></td>
        <td><%= link_to 'Show', asset %></td>
        <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
        <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

