<%= render 'shared/errors', obj: @asset %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@asset, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :asset_tag %>
          </div>
          <div class="col-sm-2">
            <%= f.text_field :asset_tag, class: "form-control", placeholder: "Asset Number", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Type %>
          </div>
          <div class="col-sm-2">
            <%= f.select :typeofasset, ['Laptop', 'Server', 'Monitor', 'IT Appliance', 'Misc'] %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Manufactuer %>
          </div>
          <div class="col-sm-3">
            <%= f.text_field :manufactuer, rows: 10, class: "form-control", placeholder: "eg, Dell, Lenovo" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Model %>
          </div>
          <div class="col-sm-3">
            <%= f.text_field :model, rows: 10, class: "form-control", placeholder: "Model" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Region %>
          </div>
          <div class="col-sm-3">
            <%= f.select :location_region, ['EMEA', 'APAC', 'AMER']%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Site %>
          </div>
          <div class="col-sm-3">
            <%= f.select :location_site, ['ADV', 'AMS', 'BUD', 'MAN', 'NBY', 'RNC', 'SNG'] %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :assignee %>
          </div>
          <div class="col-sm-3">
            <%= f.text_field :assignee, rows: 10, class: "form-control", placeholder: "Assignee" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to articles listing", assets_path %> ]
    </div>
  </div>
</div>